<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Check Weather</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <link
      href="https://fonts.googleapis.com/css?family=Open+Sans:300"
      rel="stylesheet"
      type="text/css"
    />
  </head>

  <body>
    <p
      style="
        background-color: transparent;
        text-decoration-color: black;
        font-size: 50px;
        text-align: center;
        color: white;
      "
    >
      <b>Check Weather<br />in any City</b>
    </p>
    <div class="container">
      <fieldset>
        <form class="form" action="/" method="post">
          <input
            name="city"
            type="text"
            class="ghost-input"
            placeholder="Enter a City"
            required
          />
          <input type="submit" class="ghost-button" value="Get Weather" />
        </form>

        <% if(weather !==null){ %>
        <div class="container2">
          <p><b> <%= weather %> </b></p>
          <p><b><%=weatherTemp%></b></p>
          <img src=<%= hicon %> ></img>
          <p><b><%=weatherDes%></b></p>
        </div>

        <% } %> <% if(error !==null){ %>
        <p><%= error %></p>
        <% } %>
      </fieldset>
    </div>
  </body>
</html>
